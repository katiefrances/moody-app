<form method="post" action="/users">
  <h1>Add Today's Mood</h1>
  {{!-- use moment.js to make date dynamic --}}

  <div>
    <div>
      <label>Date:</label>
      <input type="date" value="true" name="date">
    </div>
    <br>

    <div>
      <h3>Sleep:</h3>
      <label>Sleep Amount:</label>
    </div>
    <input type="range" name="sleep" min="0" max="24">

    <div>
      <label>Tired:</label>
      <input type="checkbox" value="true" name="tired">
    </div>

    <br>
    <div>
      <label>
        <h3>Moods:</h3>
      </label>
      <label>Manic/Hypomanic:</label>
      <input type="range" name="manic" min="0" max="4" step="1" />
      <br>
      <label>Depressed:</label>

      <input type="range" name="depressed" min="0" max="4" />
    </div>
    <div>
      <label>Anxiety:</label>
      <input type="range" name="anxiety" min="0" max="4" />
    </div>
    <div>
      <label>Irritation:</label>
      <input type="range" name="irritation" min="0" max="4" />
    </div>

    <br>
    <div>
      {{!-- sHould have data already that user has inputted --}}
      <label>
        <h3>Meds:</h3>
      </label>
      {{!-- Meds should show up that are inputted automatically --}}
      <input type="checkbox" value="true" name="meds"> Meds
      {{!-- more here - loop (forEach?)--}}
    </div>

    <br>
    <div>
      <label>
        <h3>Drugs/Alcohol:</h3>
      </label>

      {{!-- should be able to input what drugs instead of having a list?
    plus I don't even know that many drugs?--}}
      Drugs <input type="checkbox" value="true" name="drugs">
      {{!-- <input type="checkbox" name="drugsAmount"> Amount --}}
      Alcohol <input type="checkbox" value="true" name="alcohol">
      {{!-- Amount <input type="checkbox" name="alcoholAmount"> --}}
    </div>
    <br>

    <div>
      <label>
        <h3>Meals:</h3>
        <input type="range" name="ate" min="0">
      </label>
    </div>

    <div>
      <label>
        <h3>Exercise:</h3>
      </label>
      <input type="checkbox" name="exercise" value="true">
    </div><br>

    <div>
      <label>
        <h3>Caffeine:</h3>
        <input type="range" name="caffeine" min="0" name="caffeine">
      </label>
    </div><br>

    <div>
      <label>
        <h3>Events:</h3>
      </label>
      <input type="text" name="events">
    </div><br>

    <div>
      <label>
        <h3>Period:</h3>
        <input type="checkbox" value="true" name="period">
      </label>
    </div><br>

    <div>
      <label>
        <h3>DBT Skills:</h3>
      </label>
      <input type="text" name="dbtskills">
    </div>
    <br>

    <div>
      <label>
        <h3>Triggers:</h3>
      </label>
      <input type="text" name="triggers">
    </div>
    <br>

    <div>
      <input type="submit" value="Add Day" />
    </div>
    {{!-- end form --}}
</form>